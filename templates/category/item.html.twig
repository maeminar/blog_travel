{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-4xl text-center">{{ category.name }}</h1>

  <ul class="grid gap-8 mx-auto max-w-screen-md px-4">
    {% for article in category.articles %}
      <li class="bg-white rounded-lg shadow-lg p-6">
        {% if article.imageUrl %}
          <img src="{{ article.imageUrl }}" alt="Image de {{ article.name }}" class="w-full h-auto rounded-lg mb-4">
        {% endif %}
        <h2 class="text-2xl lg:text-3xl font-semibold text-center mb-4">{{ article.name }}</h2>
        <p class="text-gray-700 mt-2 mb-4">{{ article.content }}</p>
        <p class="text-gray-500 text-sm mt-4">Publi√© le {{ article.createdAt|date('d/m/Y') }}</p>
      </li>
    {% endfor %}
  </ul>
</div>
{% endblock %}
