{% extends 'base.html.twig' %}

{% block body %}
<div class="py-8">
    <h1 class="text-4xl font-bold text-center mb-8">{{ category.name }}</h1>

    <div class="max-w-screen-md mx-auto grid gap-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        {% for article in category.articles %}
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            {% if article.imageUrl %}
            <img src="{{ img_upload_dir ~ article.imageUrl }}" alt="Image de {{ article.name }}" class="w-full h-48 object-cover object-center">
            {% endif %}
            <div class="p-6">
                <h2 class="text-xl lg:text-2xl font-semibold text-center mb-4">{{ article.name }}</h2>
                <p class="text-gray-700 mb-4">{{ article.content|slice(0, 150) }}{% if article.content|length > 150 %}...{% endif %}</p>
                <p class="text-gray-500 text-sm">Publi√© le {{ article.createdAt|date('d/m/Y') }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
