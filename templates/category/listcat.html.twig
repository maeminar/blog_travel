{% extends 'base.html.twig' %}

{% block title %}
  Catégories
{% endblock %}

{% block body %}
<div class="bg-cover bg-center bg-no-repeat min-h-screen flex items-center justify-center" style="background-image: url('{{ asset('images/accueil.png') }}');">
  <div class="mx-auto max-w-screen-lg bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">Articles par catégories</h1>

    {% if categories is empty %}
      <p class="text-center text-gray-600 mt-6">Aucune catégorie trouvée</p>
    {% else %}
      <ul class="divide-y divide-gray-200">
        {% for category in categories %}
          <li class="py-4">
            <a href="{{ path('category_item', { id: category.id }) }}" class="block hover:bg-gray-50 focus:outline-none focus:bg-gray-50 transition duration-150 ease-in-out">
              <div class="flex items-center justify-between">
                <div class="text-xl font-semibold text-blue-600 hover:underline">{{ category.name }}</div>
                <div class="text-sm text-gray-600">{{ category.articles|length }} articles</div>
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>
{% endblock %}
