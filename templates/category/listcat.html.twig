{% extends 'base.html.twig' %}

{% block title %}
  Catégories
{% endblock %}

{% block body %}
<div class="bg-cover bg-center bg-no-repeat h-screen flex items-center justify-center" style="background-image: url('{{ asset('images/accueil.png') }}');">
  <div class="mx-auto max-w-screen-lg">
    <h1 class="text-4xl text-center text-white my-6">Articles par catégories</h1>

    {% for category in categories %}
      <div class="bg-white rounded-md p-4 my-4">
        <a class="text-2xl text-blue-600 hover:underline" href="{{ path('category_item', { id: category.id }) }}">{{ category.name }}</a> <br>
        <span class="text-gray-600">{{ category.articles|length }} articles</span>
      </div>
    {% else %}
      <p class="text-center mt-6">Aucune catégorie trouvée</p>
    {% endfor %}
  </div>
</div>
{% endblock %}
