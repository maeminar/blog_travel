{% extends 'base.html.twig' %}

{% block title %}Articles voyage{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 py-12">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-800 my-8">🌏 Tous les articles 🌏</h1>
  </div>

  <div class="grid gap-8 md:grid-cols-2 max-w-screen-lg mx-auto px-4">
    {% for article in articles %}
      <div class="bg-white rounded-lg shadow-lg p-6">
        <p class="text-gray-500 text-sm mb-2">Catégorie : <span class="text-blue-600 font-medium">{{ article.category.name }}</span></p>
        {% if article.imageUrl %}
          <img src="{{ article.imageUrl }}" alt="Image de {{ article.name }}" class="w-full h-auto rounded-lg mb-4">
        {% endif %}
        <h2 class="text-xl lg:text-2xl font-semibold text-center mb-4">{{ article.name }}</h2>
        <p class="text-gray-700 mt-2 mb-4">{{ article.content }}</p>
        <p class="text-gray-500 text-sm mt-4">Publié le {{ article.createdAt|date('d/m/Y') }}</p>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
