{% extends 'base.html.twig' %}

{% block title %}Articles voyage{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 py-12">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-800 my-8">üåè Tous les articles üåè</h1>
  </div>

  <div class="grid gap-8 md:grid-cols-2 max-w-screen-lg mx-auto px-4">
    {% for article in articles %}
      <div class="bg-white rounded-lg shadow-lg p-6">
        <p class="text-gray-500 text-sm mb-2">Cat√©gorie : <span class="text-blue-600 font-medium">{{ article.category.name }}</span></p>
        {% if article.imageUrl %}
          <img src="{{ img_upload_dir ~ article.imageUrl }}" alt="Image de {{ article.name }}" class="w-full h-auto rounded-lg mb-4">
        {% endif %}
        <p class="text-gray-500 text-m-l mt-4">Article r√©dig√© par : {{ article.author }}</p>
        <h2 class="text-xl lg:text-2xl font-semibold text-center mb-4">{{ article.name }}</h2>
        <p class="text-gray-500 text-sm mt-4">Article publi√© le {{ article.createdAt|date('d/m/Y') }}</p>
        <p class="text-gray-700 mt-2 mb-4">{{ article.content }}</p>

        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mt-4">
          <h3 class="text-blue-800 font-semibold mb-2">Transport utilis√©</h3>
          <p class="flex items-center text-blue-600">
            <svg class="w-6 h-6 mr-2" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M13 7H7v6h6V7zm2-3H5a1 1 0 00-1 1v10h12V5a1 1 0 00-1-1zM7 9h6v2H7V9z"/></svg>
            Ce.tte voyageur.euse a utilis√© le moyen de transport suivant pour voyager : {{ article.transport }}
          </p>
          <p class="flex items-center text-blue-600 mt-2">
            <svg class="w-6 h-6 mr-2" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M6.293 9.293a1 1 0 011.414 0L10 11.586l2.293-2.293a1 1 0 111.414 1.414L11.414 13l2.293 2.293a1 1 0 01-1.414 1.414L10 14.414l-2.293 2.293a1 1 0 01-1.414-1.414L8.586 13 6.293 10.707a1 1 0 010-1.414z"/></svg>
            Distance parcourue : {{ article.distance }} km. <br>
          </p>
          {% if article.calculateCarbon() > 1 %}
            <p class="bg-red-500 text-white font-bold py-2 px-4 rounded-lg mt-2">
              Empreinte carbone : {{ article.calculateCarbon() }} g de CO2 üò≤
            </p>
          {% else %}
            <p class="bg-green-500 text-white font-bold py-2 px-4 rounded-lg mt-2">
              Empreinte carbone : {{ article.calculateCarbon() }} g de CO2 ‚úîÔ∏è
            </p>
          {% endif %}
        </div>

        <div class="mt-6">
          <h3 class="text-xl font-semibold mb-2">Commentaires</h3>
          {% if article.getComments()|length > 0 %}
            <ul class="list-disc list-inside">
              {% for comment in article.getComments() %}
                <li class="text-gray-700">{{ comment.getContent() }}</li>
                <p class="text-sm text-gray-500">Publi√© le {{ comment.getCreatedAt()|date('d/m/Y') }}</p>
                <hr class="my-2">
              {% endfor %}
            </ul>
          {% else %}
            <p class="text-gray-500">Aucun commentaire trouv√©.</p>
          {% endif %}
        </div>
        <div class="mt-4 text-center">
            <a href="{{ path('comment_add', {'id': article.id}) }}" class="bg-blue-500 text-white font-bold py-2 px-4 rounded-lg mt-2 inline-block">Ajouter un commentaire</a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
